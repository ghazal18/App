<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/nav_graph"
    app:startDestination="@id/movieListFragment">

    <fragment
        android:id="@+id/movieListFragment"
        android:name="com.example.myapplication.ui.movieList.MovieListFragment"
        android:label="MovieListFragment"
        >
        <action
            android:id="@+id/action_movieListFragment_to_searchResultFragment"
            app:destination="@id/searchResultFragment" />
        <action
            android:id="@+id/action_movieListFragment_to_upComingMovieFragment"
            app:destination="@id/upComingMovieFragment" />
        <action
            android:id="@+id/action_movieListFragment_to_detailFragment"
            app:destination="@id/detailFragment" />
        <action
            android:id="@+id/action_movieListFragment_self"
            app:destination="@id/movieListFragment" />
    </fragment>
    <fragment
        android:id="@+id/searchResultFragment"
        android:name="com.example.myapplication.ui.search_result.SearchResultFragment"
        android:label="SearchResultFragment" >
        <argument
            android:name="searchWord"
            app:argType="string" />
    </fragment>
    <fragment
        android:id="@+id/upComingMovieFragment"
        android:name="com.example.myapplication.ui.upComingMovie.UpComingMovieFragment"
        android:label="UpComingMovieFragment" />
    <fragment
        android:id="@+id/detailFragment"
        android:name="com.example.myapplication.ui.movieDetail.DetailFragment"
        android:label="DetailFragment" >
        <argument
            android:name="movieId"
            app:argType="integer" />
        <action
            android:id="@+id/action_detailFragment_to_showVideoFragment"
            app:destination="@id/showVideoFragment" />
    </fragment>
    <fragment
        android:id="@+id/showVideoFragment"
        android:name="com.example.myapplication.ui.video_webview.ShowVideoFragment"
        android:label="ShowVideoFragment" >
        <argument
            android:name="movieId"
            app:argType="integer" />
    </fragment>
</navigation>